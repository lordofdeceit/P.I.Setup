		do
			if [ "$(code --list-extensions | grep '${i}')" == "" ]
			then
				missing_vscode_extensions+=(${i})
			fi
		done

		if [ ${#missing_vscode_extensions[@]} -gt 0 ]
		then
			for i in "${missing_vscode_extensions[@]}"
			do
				code --install-extension ${i} &> /dev/null
